extends ../layouts/application.pug

block header
  = t('views.users.edit.title')

block content
  form(action=route('patchUser', { id: user.id }) method='post')
    +input(user, 'firstName', errors, t('views.users.edit.firstName'))(type="text")
    +input(user, 'lastName', errors, t('views.users.edit.lastName'))(type="text")
    +input(user, 'email', errors, t('views.users.edit.email'))(type="text")
    +input(user, 'password', errors, t('views.users.edit.password'))(type="password")
    input(name="_method" type="hidden" value="patch")
    .form-group
      input(class='btn btn-primary' type='submit' value=t('views.users.edit.submit'))
