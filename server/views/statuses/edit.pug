extends ../layouts/application.pug

block header
  = t('views.statuses.edit.title')

block content
  form(action=route('patchStatus', { id: status.id }) method='post')
    +input(status, 'name', errors, t('views.statuses.edit.name'))(type="text")
    input(name="_method" type="hidden" value="patch")
    .form-group
      input(class='btn btn-primary' type='submit' value=t('views.statuses.edit.submit'))