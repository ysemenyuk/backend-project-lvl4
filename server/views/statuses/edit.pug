extends ../layouts/application.pug

block header
  = 'edit status'

block content
  form(action=route('patchStatus', { id: status.id }) method='post')
    +input(status, 'name', errors)(type="text")
    input(name="_method" type="hidden" value="patch")
    .form-group
      input(class='btn btn-primary' type='submit' value='submit')