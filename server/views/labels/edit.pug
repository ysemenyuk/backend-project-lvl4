extends ../layouts/application.pug

block header
  = t('views.labels.edit.title')

block content
  form(action=route('patchLabel', { id: label.id }) method='post')
    +input(label, 'name', errors, t('views.labels.edit.name'))(type="text")
    input(name="_method" type="hidden" value="patch")
    .form-group
      input(class='btn btn-primary' type='submit' value=t('views.labels.edit.submit'))